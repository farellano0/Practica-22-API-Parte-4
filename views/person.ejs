<%- include('layout/header') %>

    <div class="container">
            <h1> Registrar persona </h1>
            <div class="col-md-4 mx-auto">
                <div class="card border-secondary mb-3">
                    <div class="card-header">
                        <h3>Formulario</h3>
                    </div>
                    <div class="card-body" style="border-color:black;">
                        <form action="/addPerson" method="POST">
                            <div class="form-group">
                                <label for="nombre">Nombre:</label>
                                <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Nombre completo" autofocus>
                            </div>
                            <div class="form-group">
                                <label for="habitacion">Habitación:</label>
                                <input type="number" name="habitacion" id="habitacion" placeholder="Número de habitación" class="form-control" autofocus>
                            </div>
                            <div class="form-group">
                                <label for="correo">Correo Electrónico:</label>
                                <input type="text" name="correo" id="correo" placeholder="Correo Electrónico" class="form-control" autofocus>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block" type="submit" style="margin-top: 25px;">
                                    Registrar
                                </button>
                                <!---<input type="submit" value="Submit">--->
                            </div>
                        </form>
                    </div>
                </div>
                <a href="/persons" class="btn btn-danger btn-block">Cancelar</a>
            </div>
    </div>

<%- include('layout/footer') %>